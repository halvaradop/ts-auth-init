{
  "name": "@halvaradop/auth-init",
  "version": "0.2.0",
  "main": "dist/index.js",
  "description": "CLI tool to initialize a project with auth.js",
  "bin": {
    "auth-init": "dist/index.js"
  },
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc",
    "link-cli": "pnpm unlink @halvaradop/auth-init && chmod +x dist/index.js && pnpm link -g",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest --run --silent",
    "test:watch": "vitest"
  },
  "type": "module",
  "keywords": [
    "auth.js",
    "cli",
    "tool",
    "initializer",
    "security",
    "authentication",
    "authorization"
  ],
  "author": "Hernan Alvarado <hernanvid123@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halvaradop/auth-init.git"
  },
  "bugs": {
    "url": "https://github.com/halvaradop/auth-init/issues"
  },
  "homepage": "https://github.com/halvaradop/auth-init#readme",
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.17.9",
    "dotenv": "^16.4.5",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@inquirer/prompts": "^5.5.0",
    "commander": "^12.1.0",
    "nanospinner": "^1.2.0"
  },
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@9.12.0",
  "prettier": {
    "tabWidth": 4,
    "semi": false,
    "printWidth": 130,
    "overrides": [
      {
        "files": [
          "*.json",
          "*.md",
          "*.yaml",
          "*.yml"
        ],
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
